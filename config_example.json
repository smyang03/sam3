{
  "model_dir": "./models",
  "image_dir": "./data/images",
  "label_dir": "./data/labels",
  "viz_dir": "./data/results",

  "classes": {
    "person": 0,
    "helmet": 1,
    "car": 2
  },

  "detection_config": {
