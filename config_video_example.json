{
  "model_dir": "./models",

  "video_config": {
    "video_source": "./videos",
    "fps": 1,
    "jpeg_dir": "./data/JPEGImages"
  },

  "label_dir": "./data/labels",
  "viz_dir": "./data/results",

  "classes": {
    "person": 0,
    "helmet": 1,
    "vest": 2,
    "car": 3
  },

  "detection_config": {
    "use_presence": false,
    "default_threshold": 0.3,
    "class_thresholds": {
      "person": 0.3,
      "helmet": 0.15,
      "vest": 0.2,
      "car": 0.3
    },
    "max_dets_per_img": 100
  },

  "inference": {
    "chunk_size": 4
  },

  "output": {
    "save_viz": false,
    "show": false
  }
}
